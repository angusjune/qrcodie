{
  "manifest_version": 2,
  "name": "QRCodie",
  "version": "0.1.0",
  "description": "Generate QR Codes.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_title": "QRCodie",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
  "permissions": [
    "storage",
    "tabs",
    "clipboardRead"
  ]
}